<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://java.sun.com/xml/ns/javaee" 
		xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:cfg/applicationContext.xml</param-value>
	</context-param>
	   <listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	 <welcome-file-list>
	   <welcome-file>index.html</welcome-file>
	 </welcome-file-list>
	 <error-page>
	   <error-code>404</error-code>
	   <location>/common/html/404.html</location>
	 </error-page>
	 <session-config>
	   <session-timeout>60</session-timeout>
	 </session-config>
	 <error-page>
	   <exception-type>java.lang.Exception</exception-type>
	   <location>/common/html/error.html</location>
	 </error-page>
	 
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:cfg/applicationContext-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
  
  
</web-app>