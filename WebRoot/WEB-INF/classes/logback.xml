<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<property name="LOG_HOME" value="." />
	<!-- 控制台输出 -->
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<Encoding>UTF-8</Encoding>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger{10} - %msg%n
			</pattern>
		</layout>
	</appender>
	<!-- 操作索引按照每天生成日志文件 -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>
				${LOG_HOME}/logs/webserver.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<!-- 保留最近天数 -->
			<MaxHistory>10</MaxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger{10} - %msg%n
			</pattern>
		</layout>
	</appender>
	
	<!-- 需要记录日志的包  
    <logger name="net.sf.ehcache">  
        <level value="INFO" />  
    </logger>  
	--> 
	<logger name="org.hibernate" level="WARN"/> 
	<logger name="org.springframework" level="WARN"/> 
	<logger name="com.mchang" level="WARN"/> 
	
	<!--     显示sql -->
	
    <logger name="com.ibatis" level="WARN" />
    <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="WARN" />
    <logger name="com.ibatis.common.jdbc.ScriptRunner" level="WARN" />
    <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="WARN" />
    <logger name="java.sql.Connection" level="DEBUG" />
    <logger name="java.sql.Statement" level="DEBUG" />
    <logger name="java.sql.PreparedStatement" level="DEBUG" />
	
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
	
