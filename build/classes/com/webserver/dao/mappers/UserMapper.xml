<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webserver.dao.UserDao">
	<cache /> <!-- 开启缓存 -->
	
	 <select id="getAccountByUsername" parameterType="string" resultType="com.webserver.modal.User">
	   SELECT user_id userId,user_name userName,password,tel
	   from user
	   <where>
	   		<if test="username != null">
	   			user_name = #{username}
	   		</if>
	   </where>
	 </select>
	 
	 <insert id="insertUser" parameterType="User">
	 	insert into user (user_name,password,tel)
	 	values (#{user.userName},#{user.password},#{user.tel})
	 </insert>
</mapper>